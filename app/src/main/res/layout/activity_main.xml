<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.nukc.appmarketupdater.sample.MainActivity">

    <EditText
        android:id="@+id/et_package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="com.tencent.mm"
        android:hint="PackageName!" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_package_name"
        android:layout_centerHorizontal="true"
        android:text="default version" />

    <Button
        android:id="@+id/btn_open_rxjava2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open"
        android:layout_centerHorizontal="true"
        android:text="rxjava2 version" />

    <Button
        android:id="@+id/btn_open_kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open_rxjava2"
        android:layout_centerHorizontal="true"
        android:text="kotlin version" />

</RelativeLayout>
